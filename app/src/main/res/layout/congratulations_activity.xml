<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_background">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_to_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:iconSize="@dimen/button_icon_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        app:icon="@drawable/ic_baseline_chevron_left_24"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/well_done_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_content_left"
        android:layout_marginTop="@dimen/margin_top_title_to_parent"
        android:text="@string/well_done_message"
        android:textColor="@color/white"
        android:textSize="@dimen/large_font_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name_final_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="@dimen/mid_font_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/well_done_text_view"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/name_final_edit_text"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="First Name Test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_final_text_view"
        android:layout_marginLeft="24dp"
        android:textColor="@color/white"
        android:theme="@style/FormFontWhite"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/surname_final_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surname"
        android:textSize="@dimen/mid_font_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_final_edit_text"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/surname_final_edit_text"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:enabled="false"
        android:text="Surname Test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surname_final_text_view"
        android:layout_marginLeft="24dp"
        android:textColor="@color/white"
        android:theme="@style/FormFontWhite"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/email_final_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="@dimen/mid_font_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/surname_final_edit_text"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/email_final_edit_text"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:enabled="false"
        android:text="Email Test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_final_text_view"
        android:layout_marginLeft="24dp"
        android:textColor="@color/white"
        android:theme="@style/FormFontWhite"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/password_final_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="@dimen/mid_font_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_final_edit_text"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/password_final_edit_text"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:enabled="false"
        android:text="Password Test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_final_text_view"
        android:layout_marginLeft="24dp"
        android:textColor="@color/white"
        android:theme="@style/FormFontWhite"/>

</androidx.constraintlayout.widget.ConstraintLayout>